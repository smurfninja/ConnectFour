#ifndef DISC_H
#define DISC_H

class disc
{
  public:
   /**
      Default contrustor: will assume colour is black
    */
   disc() { colour = false;}
   /**
      Constructor: sets colour to variable c
    */
   disc(bool c) {colour = c;}
   /**
      Getter function: will return the value for colour
   */
   bool getColour() {return colour;}
   
  private:
   bool colour;
};

#endif
